<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.gridtest"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawSelectorOnTop="true"
        android:numColumns="3" >
    </GridView>
    
    <com.example.gridtest.FencyGallery	
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:spacing="-50dp"
        app:center_zoomable="true"
        app:center_zoom_ratio="250"
        app:rotatable="true"
		app:rotate_degrees="30"
		app:enable_alpha="true"/>

</RelativeLayout>
